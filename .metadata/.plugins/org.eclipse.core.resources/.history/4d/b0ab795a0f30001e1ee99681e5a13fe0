package model;
import java.util.*;
import java.sql.*;

public class ProDAO {
	
	// 교수목록
	public ArrayList<ProVO> list(int page, String query){
		ArrayList<ProVO> array = new ArrayList<ProVO>();
		try {
			String 	sql="SELECT * FROM professors";
					sql+=" WHERE PNAME LIKE ? OR DEPT LIKE ?";
					sql+=" LIMIT ?,5";
			PreparedStatement ps = Database.CON.prepareStatement(sql);
			ps.setString(1, "%"+query+"%");
			ps.setString(2, "%"+query+"%");
			ps.setInt(3, (page-1)*5);
		} catch (Exception e) {
			System.out.println("교수님 리스트 오류 : " + e.toString() );
		}
		
		return array;
	}
}

package model;

import java.util.ArrayList;
import java.sql.*;

public class StuDAO {
	public ArrayList<StuVO> list (int page, String query){
		ArrayList<StuVO> array = new ArrayList<>();
		try {
			String sql = "SELECT * FROM STUDENTS WHERE SNAME LIKE ? OR DEPT LIKE ? LIMIT ?,5;";
			PreparedStatement ps=Database.CON.prepareStatement(sql);
			ps.setString(1, "%"+query+"%");
			ps.setString(2, "%"+query+"%");
			ps.setInt(3, (page-1)*5);
			ResultSet rs=ps.executeQuery();
			while(rs.next()) {
				StuVO vo= new StuVO();
				
			}
			
			
		} catch (Exception e) {
			System.out.println("학생목록 오류 : " + e.toString());
		}
		return array;
	}
}

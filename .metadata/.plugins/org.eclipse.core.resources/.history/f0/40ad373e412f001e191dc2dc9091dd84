package model;
import java.util.*;
import java.sql.*;

public class ProductDAO {
	
	
	// 상품목록
	public ArrayList<ProductVO> list(int page, String query) {
		ArrayList<ProductVO> array = new ArrayList<ProductVO>();
		try {
			String sql = "SELECT * FROM PRODUCTS WHERE NAME LIKE ? ORDER BY CODE LIMIT ?,5";
			PreparedStatement ps = Database.CON.prepareStatement(sql);
			ps.setString(1, "%" + query + "%");
			ps.setInt(2, (page-1)*5);
			ResultSet rs = ps.executeQuery();
			while(rs.next()) {
				ProductVO vo = new ProductVO();
				vo.setCode(rs.getInt("CODE"));
				vo.setName(rs.getString("NAME"));
				vo.setPrice(rs.getInt("PRICE"));
				vo.setRdate(rs.getTimestamp("RDATE"));
				array.add(vo);
			}
			
		} catch (Exception e) {
			System.out.println("상품목록 오류 : " + e.toString());
		}
		return array;
	}
}

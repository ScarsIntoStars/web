<script>
 $(frm1).on("submit", function(){
	 e.preverntDefault();
	 const pname=$(frm1.pname).val();
	 const salary=$(frm1.salary).val();
	 
	 if(pname=="") {
		 alert("교수 이름을 입력하세요!");
		 $(frm1.pname).focus();
	 } else if(salary.replace(/[0-9]/g, '')) {
		 alert("급여를 숫자로 입력하세요!")
		 $(frm1.salary).focus();
	 }
	 
	 if(confirm("새로운 교수를 등록하실래요?")) {
		 
	 }
 })
 
 	$(frm1).on("reset", function(){
 		$("#insert").madal("hide")
 	})
</script>














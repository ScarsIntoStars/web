<script>




getList();
function getList(){
	$.ajax({
		type:"get",
		url: "/stu/list.json",
		data: {page: 1},
		dataType:"json",
		success:function(data){
			console.log(data);
			const temp=Handlebars.compile($("#temp_stu").html());
			const html=temp(data);
			$("#div_stu").html(html);
		}
	});
}


	 



</script>
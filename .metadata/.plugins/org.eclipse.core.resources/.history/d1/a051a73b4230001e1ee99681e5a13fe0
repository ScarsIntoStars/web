<script id="temp_stu" type="text/x-handlebars-template">
	<table class="table">
		<tr>
			<td>학생번호</td>
			<td>학생이름</td>
			<td>소속학과</td>
			<td>학년</td>
			<td>생년월일</td>
			<td>지도교수 번호</td>
		</tr>
	{{#each .}}
		<tr>
			<td>{{scode}}</td>
			<td>{{sname}}</td>
			<td>{{dept}}</td>
			<td>{{year}}</td>
